{
  "name": "vila-pos-system",
  "version": "1.0.0",
  "description": "Vila POS Billing System",
  "type": "module",
  "main": "public/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron public/electron.js",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron public/electron.js\"",
    "build-electron": "npm run build && electron-builder",
    "build-win": "npm run build && electron-builder --win"
  },
  "keywords": ["pos", "billing", "vila", "react", "vite"],
  "author": "Vila POS Team",
  "license": "MIT",
  "build": {
    "appId": "com.vila.pos",
    "productName": "Vila POS System",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "public/electron.js",
      "public/preload.js",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@tanstack/react-query": "^5.8.4",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.5",
    "lucide-react": "^0.294.0",
    "moment": "^2.29.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.1",
    "sqlite3": "^5.1.6",
    "tailwind-merge": "^2.0.0",
    "yup": "^1.3.3",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.0",
    "wait-on": "^7.2.0"
  }
}