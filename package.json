{
  "name": "vila-pos-system",
  "version": "1.0.0",
  "description": "Vila POS Billing System",
  "main": "public/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build-win": "npm run build && electron-builder --win --publish=never",
    "app": "cross-env NODE_ENV=production electron public/electron.js",
    "build-and-run": "npm run build && npm run app",
    "clean": "rimraf dist dist-electron",
    "rebuild": "npm run clean && npm run build",
    "package": "npm run build && electron-builder --win --publish=never",
    "start": "npm run build-and-run"
  },
  "keywords": [
    "pos",
    "billing",
    "vila",
    "react",
    "vite"
  ],
  "author": "Vila POS Team",
  "license": "MIT",
  "build": {
    "appId": "com.vila.pos",
    "productName": "Vila POS System",
    "electronVersion": "27.1.3",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "public/electron.js",
      "public/preload.js",
      "package.json",
      "node_modules/**/*",
      "!node_modules/.cache/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "publisherName": "Vila POS Team",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Vila POS System"
    },
    "compression": "normal",
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.5",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.1",
    "tailwind-merge": "^2.0.0",
    "yup": "^1.3.3",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.31",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.0"
  }
}
